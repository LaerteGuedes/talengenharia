    <div class="page-header">
        <h1>Ocorreu um erro</h1>
    </div> <!-- .page-header -->
    <h2>
        <?= $this->exception ?>
    </h2>
    <h3>Parâmetros Enviados:</h3>
    <pre>
        <?php
        foreach ($this->request as $i => $v) {
            echo "$i: $v <br/>";
        }
        ?>
    </pre>
    <br/><br/>

<? else: ?>

<br/><br/>
<div class="page-header">
<h1>Oops!</h1>
</div>
