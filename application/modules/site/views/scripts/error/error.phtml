<html lang="pt-br">
<head>
    <title>Página não encontrada - <?=  Zend_Registry::get("oConfiguracao")->TITULO?></title>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/library/bootstrap/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <? if ($this->tipoErro == 1): ?>
